<!DOCTYPE html>
<html>
  <head>
    <title>MarcelasBlogorama</title>
    <%= csrf_meta_tags %>

    <%= favicon_link_tag 'Fav_Feb_08_Main' %>

    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
          <div class="container">

            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Marcela's Blog-O-Rama</a>
            </div>

            <div id="navbar" class="collapse navbar-collapse">

              <% if session[:user_id] %>

                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Log out", "/sessions/:id", method: :delete %></li>
                  </ul>

                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "See All Posts", posts_path %></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Create Post", new_post_path %></li>
                  </ul>

              <% else %>


                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "New User Sign Up", new_user_path %></li>
                  </ul>

                  <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Sign In", sessions_new_path %></li>
                  </ul>

              <% end %>

              <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Home", home_path %></li>
              </ul>




            </div><!--/.nav-collapse -->

          </div>

        </nav>


          <%= yield %>

  </body>


</html>
